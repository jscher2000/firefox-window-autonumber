{
	"name": "Auto-number Windows - stable menu order",
	"description": "Keep your windows in the order they were opened on the Mac OS Window menu. (Manifest v3 version)",
	"version": "0.6.5",
	"manifest_version": 3,
	"browser_specific_settings":{
		"gecko": {
			"id": "window-autonumber@jeffersonscher.com",
			"strict_min_version": "109.0"
		}
	},
	"background": {
		"scripts": [
			"window-autonumber-background.js"
		]
	},
	"icons": {
		"128": "icons/window-autonumber-128-light.png"
	},
	"permissions": [
		"menus",
		"storage", 
		"alarms"
	],
	"optional_permissions": [
		"tabs"
	],
	"action": {
		"default_title": "Auto-number Windows - Window List",
		"default_popup": "window-autonumber-popup.html",
		"theme_icons": [{
			"light": "icons/window-autonumber-128-light.png",
			"dark": "icons/window-autonumber-128-dark.png",
			"size": 128
		}]
	}
}
